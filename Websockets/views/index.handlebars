<div class="container mt-3">
  <div class="jumbotron">
    <h1 class="text-primary">Ingrese Producto</h1>
    <br />

    <form>
      <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" />
      </div>
      <div class="mb-3">
        <label for="precio" class="form-label">Precio</label>
        <input type="text" class="form-control" id="precio" />
      </div>
      <div class="mb-3">
        <label for="foto" class="form-label">Foto URL</label>
        <input type="text" class="form-control" id="foto" />
      </div>
      <button type="button" class="btn btn-success" id="submitBtn">Insertar</button>
    </form>

    {{#if hayProductos}}
      <div class="table-responsive mt-3">
        <table class="table table-dark">
          <tr> <th>Nombre</th> <th>Precio</th> <th>Foto</th></tr>
          {{#each productos}}
            <tr>
              <td>{{this.title}}</td>
              <td>${{this.price}}</td>
              <td><img width="50" src={{this.thumbnail}} alt="not found" /></td>
            </tr>
          {{/each}}
        </table>
      </div>
    {{else}}
      <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/scripts/index.js"></script>
