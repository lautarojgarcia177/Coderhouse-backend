<!DOCTYPE html>
<html lang="es">

<head>
    <!-- Partial -->
    <%- include('./partials/head'); -%>
</head>

<body>
    <div class="container mt-3">

        <style>
            .table td,
            .table th {
                vertical-align: middle;
            }
            
            h1 {
                color: blue;
            }
            
            hr {
                background-color: #ddd;
            }
            
            .jumbotron {
                min-height: 100vh;
            }
        </style>

        <div class="jumbotron">
            <h1>Vista de Productos</h1>
            <br>

            <% if (hayProductos) { %>
                <table class="table table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto</th>
                    </tr>
                    <% productos.forEach(function(producto) { %>
                        <tr>
                            <td>
                                <%= producto.title %>
                            </td>
                            <td>
                                $
                                <%= producto.price %>
                            </td>
                            <td>
                                <img width="50" src=<%=p roducto.thumbnail %> alt="not found">
                            </td>
                        </tr>
                        <% }); %>
                </table>
        </div>
        <% } else {%>
            <h3 class="alert alert-warning">No se encontraron productos</h3>
            <% } %>
    </div>

</body>

</html>